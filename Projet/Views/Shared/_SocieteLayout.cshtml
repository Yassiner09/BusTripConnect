<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TRANSMRC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Accueil", "Societe")">
                <img src="~/Images/LogoAccueil.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                TRANSMRC
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active  mx-4" href="@Url.Action("Accueil", "Societe")">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active  mx-4" href="@Url.Action("Offre", "Societe")">Créer une Offre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active  mx-4" href="@Url.Action("OffresCréés", "Societe")">Mes Offres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active  mx-4" href="@Url.Action("Demandes", "Societe")">Gérer les Demandes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active  mx-4" href="@Url.Action("Données", "Societe")">Données Personnelles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active  mx-4" href="@Url.Action("Déconnexion", "Societe")">Déconnexion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year TRANSMRC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

