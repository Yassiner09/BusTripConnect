@model Projet.Models.Societe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_SocieteLayout.cshtml";
}

<div class="text-center m-3">
    <h2>Modifier les données personnelles</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDSociete)

        <div class="form-group p-2">
            @Html.LabelFor(model => model.Nom, htmlAttributes: new { @class = "control-label col-md-2 my-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group p-2">
            @Html.LabelFor(model => model.Identifiant, htmlAttributes: new { @class = "control-label col-md-2 my-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Identifiant, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Identifiant, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group p-2">
            @Html.LabelFor(model => model.MotDePasse, htmlAttributes: new { @class = "control-label col-md-2 my-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MotDePasse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MotDePasse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modifier" class="btn btn-primary p-2 m-2" />
            </div>
        </div>
    </div>
}



